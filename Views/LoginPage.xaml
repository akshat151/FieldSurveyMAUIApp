<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FieldSurveyMAUIApp.Views.LoginPage"
             xmlns:viewmodel="clr-namespace:FieldSurveyMAUIApp.ViewModels"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" RowSpacing="20" Padding="20">
        <Image 
            Grid.Row="0"
            Source="dotnet_bot.png"
            HeightRequest="150"
            WidthRequest="150"
            HorizontalOptions="Center"/>
            
        <VerticalStackLayout
            Grid.Row="1"
            Spacing="25"
            VerticalOptions="Center">

            <Label 
                Text="Disaster Survey Reporter"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center" />
                
            <Frame 
                BorderColor="Gray"
                CornerRadius="8"
                Padding="15">
                
                <VerticalStackLayout Spacing="15">
                    <Label 
                        Text="{Binding ErrorMessage}" 
                        IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"
                        TextColor="Red"
                        HorizontalOptions="Center" />
                    
                    <Entry 
                        Placeholder="Username"
                        Text="{Binding Username}" />
                    
                    <Entry 
                        Placeholder="Password"
                        IsPassword="True"
                        Text="{Binding Password}" />
                    
                    <Button 
                        Text="Login"
                        Command="{Binding LoginCommand}"
                        IsEnabled="{Binding IsNotBusy}"
                        HorizontalOptions="Center"
                        WidthRequest="150"/>
                    
                    <ActivityIndicator 
                        IsRunning="{Binding IsBusy}"
                        IsVisible="{Binding IsBusy}"
                        HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
            
            <Label 
                Text="Use admin/admin to login"
                FontSize="Small"
                TextColor="Gray"
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>