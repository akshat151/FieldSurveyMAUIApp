<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FieldSurveyMAUIApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:FieldSurveyMAUIApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="True"
    Shell.TabBarIsVisible="True"
    Shell.TabBarBackgroundColor="{StaticResource PrimaryColor}"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#DFD8F7"
    Title="Disaster Survey Reporter">

    <Shell.Resources>
        <ResourceDictionary>
            <Style x:Key="BaseStyle" TargetType="Element">
                <Setter Property="Shell.BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="Shell.ForegroundColor" Value="White" />
                <Setter Property="Shell.TitleColor" Value="White" />
                <Setter Property="Shell.DisabledColor" Value="#B4FFFFFF" />
                <Setter Property="Shell.UnselectedColor" Value="#95FFFFFF" />
            </Style>
            <Style TargetType="ShellItem" BasedOn="{StaticResource BaseStyle}" />
        </ResourceDictionary>
    </Shell.Resources>

    <!-- Login route (default) -->
    <ShellContent
        Route="login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Title="Login" />

    <!-- Main routes -->
    <TabBar Route="main">
        <Tab Title="Surveys" Icon="dotnet_bot.png">
            <ShellContent
                Route="home"
                ContentTemplate="{DataTemplate views:HomePage}"
                Title="Available Surveys" />
        </Tab>
        <Tab Title="Reports" Icon="dotnet_bot.png">
            <ShellContent
                Route="responses"
                ContentTemplate="{DataTemplate views:FilledSurveysPage}"
                Title="Submitted Reports" />
        </Tab>
    </TabBar>

    <!-- Modal route for survey form -->
    <ShellContent
        Route="survey"
        ContentTemplate="{DataTemplate views:SurveyPage}"
        Title="Fill Survey Report" />
</Shell>
